<% provide(:title, "Log in") %> 
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <!-- sessions#create -->
    <!-- scopeは送信先でparams[:session][:name]、[:session][:id]のようにまとめる役割 -->
    <!-- localは普通にHTMLとしてフォームを送信するときに必要 -->
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <!-- :email -> usersクラスのemailカラム -->
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <!-- new_password_reset_pathは/password_resets/new -->
      <%= f.label :password %>
      <%= link_to "(パスワードをお忘れですか?)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>次回以降、自動ログインする</span>
      <% end %> 

      <%= f.submit "ログイン", class: "btn btn-primary" %>

    <% end %> 

    <%= link_to "サインアップ", signup_path %>
  </div><!-- / .col-md-6 col-md-offset-3 -->
</div><!-- / .row -->