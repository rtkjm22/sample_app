<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %> 

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <!-- divタグを生成する(タグの指定, エラーメッセージ, クラス) -->
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>
      <%= render 'layouts/footer' %> 
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
